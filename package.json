    "playwright": "^1.55.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "sanitize-html": "^2.17.0",
    "sqlite3": "^5.1.7",
    "string": "^3.3.3",
    "voca": "^1.4.1",
    "xss": "^1.0.15"
  }
